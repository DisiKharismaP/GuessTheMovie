<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FinishFragment">

    <ImageView
        android:id="@+id/iv_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.234" />

    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="You're a real movie lover!\nYou finished the quiz..."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_finish"
        app:layout_constraintStart_toStartOf="@+id/iv_finish"
        app:layout_constraintTop_toBottomOf="@+id/iv_finish" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_shape_bg"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/got_it"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_finish"
        app:layout_constraintStart_toStartOf="@+id/tv_finish"
        app:layout_constraintTop_toBottomOf="@+id/tv_finish" />
</androidx.constraintlayout.widget.ConstraintLayout>