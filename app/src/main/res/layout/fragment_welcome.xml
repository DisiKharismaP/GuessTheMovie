<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WelcomeFragment">


    <ImageView
        android:id="@+id/iv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_welcome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.289" />

    <Button
        android:id="@+id/btn_welcome"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_shape_bg"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/start"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_welcome"
        app:layout_constraintStart_toStartOf="@+id/iv_welcome"
        app:layout_constraintTop_toBottomOf="@+id/iv_welcome" />
</androidx.constraintlayout.widget.ConstraintLayout>